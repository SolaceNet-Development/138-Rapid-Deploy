{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@contracts/*": ["contracts/*"],
      "@scripts/*": ["scripts/*"],
      "@test/*": ["test/*"],
      "@frontend/*": ["frontend/src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "include": [
    "./scripts",
    "./test",
    "./contracts",
    "./frontend/src",
    "./hardhat.config.ts",
    "./types/**/*.d.ts"
  ]
}  